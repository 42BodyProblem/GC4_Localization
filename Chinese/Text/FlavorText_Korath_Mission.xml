        </FlavorTextOption>
    </FlavorTextDef>
    <FlavorTextDef>
        <InternalName>FIRST_CONTACT_RESPONSE_PEACEFUL</InternalName>
        <FlavorTextOption>
            <Requirements>
                <SpeakerFaction>FACTION_ALTARIAN</SpeakerFaction>
                <ListenerRaceTrait>ExterminatorsAbility</ListenerRaceTrait>
