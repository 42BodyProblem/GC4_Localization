<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<FlavorTextDefs
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../Schema/FlavorText.xsd">
    <FlavorTextDef>
        <InternalName>TERROR_STAR_ATTACK_MAIN</InternalName>
        <FlavorTextOption>
            <Requirements>
                <ListenerHasUniversalTranslator>false</ListenerHasUniversalTranslator>
            </Requirements>
            <Text>
        Talotic yopitu mul nesin, {PLAYERFACTION:2}.[BR][BR][COLOR=UIDefaultHighlight](If you had to guess, they're very angry that you blew up their planet.)[/COLOR]
      </Text>
            <PreferenceWeight>10</PreferenceWeight>
        </FlavorTextOption>
        <FlavorTextOption>
            <Text>
        This atrocity shall never be forgotten, {PLAYERFACTION:2}. We shall not rest until you are destroyed.[BR][BR][COLOR=UIDefaultHighlight](We are at war, until the death of one of our civilizations.)[/COLOR]
      </Text>
        </FlavorTextOption>
    </FlavorTextDef>
    <FlavorTextDef>
        <InternalName>TERROR_STAR_ATTACK_RESPONSE_CRUEL</InternalName>
        <FlavorTextOption>
            <Requirements>
                <ListenerHasUniversalTranslator>false</ListenerHasUniversalTranslator>
            </Requirements>
            <Text>Bwahahaha...You should see your face!</Text>
            <PreferenceWeight>10</PreferenceWeight>
        </FlavorTextOption>
        <FlavorTextOption>
            <Text>The death cries of your people are music to my ears.</Text>
            <PreferenceWeight>10</PreferenceWeight>
        </FlavorTextOption>
    </FlavorTextDef>
    <FlavorTextDef>
        <InternalName>TERROR_STAR_ATTACK_RESPONSE_PRAGMATIC</InternalName>
        <FlavorTextOption>
            <Requirements>
                <ListenerHasUniversalTranslator>false</ListenerHasUniversalTranslator>
            </Requirements>
            <Text>Eh, it's not like you'd understand me anyway.</Text>
            <PreferenceWeight>10</PreferenceWeight>
        </FlavorTextOption>
        <FlavorTextOption>
            <Text>Sacrifices must be made.</Text>
            <PreferenceWeight>10</PreferenceWeight>
        </FlavorTextOption>
    </FlavorTextDef>
    <FlavorTextDef>
        <InternalName>TERROR_STAR_ATTACK_RESPONSE_RIGHTEOUS</InternalName>
        <FlavorTextOption>
            <Requirements>
                <ListenerHasUniversalTranslator>false</ListenerHasUniversalTranslator>
            </Requirements>
            <Text>You may not understand me, but I am doing the galaxy a favor ridding it of your civilization.</Text>
            <PreferenceWeight>10</PreferenceWeight>
        </FlavorTextOption>
        <FlavorTextOption>
            <Text>The galaxy will be better off without your civilization.</Text>
            <PreferenceWeight>10</PreferenceWeight>
        </FlavorTextOption>
    </FlavorTextDef>
</FlavorTextDefs>