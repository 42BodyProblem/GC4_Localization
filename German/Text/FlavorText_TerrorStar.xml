                <ListenerHasUniversalTranslator>false</ListenerHasUniversalTranslator>
            </Requirements>
            <Text>Bwahahaha...Du solltest dein Gesicht sehen!</Text>
            <PreferenceWeight>10</PreferenceWeight>
        </FlavorTextOption>
        <FlavorTextOption>
            <Text>Die Todeschreie deines Volkes sind Musik in meinen Ohren.</Text>
            <PreferenceWeight>10</PreferenceWeight>
        </FlavorTextOption>
