		<FlavorTextOption>
			<Requirements>
				<SpeakerFaction>FACTION_SEEING</SpeakerFaction>
			</Requirements>
			<Text>Мы рассматриваем.</Text>
			<PreferenceWeight>50</PreferenceWeight>
		</FlavorTextOption>

	</FlavorTextDef>

	<FlavorTextDef>
		<InternalName>EXTRA_OPTIONS_MAIN_TEXT</InternalName>

		<FlavorTextOption>
			<Requirements>
				<SpeakerFaction>FACTION_SEEING</SpeakerFaction>
			</Requirements>
			<Text>Мы говорим?</Text>
		</FlavorTextOption>

	</FlavorTextDef>
		
</FlavorTextDefs>
